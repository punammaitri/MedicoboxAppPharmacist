<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/height_4"
    android:layout_marginTop="@dimen/height_3"
    android:layout_marginRight="@dimen/height_4"
    android:layout_marginBottom="@dimen/height_3"
    android:background="@color/color_gray_bg"
    app:cardCornerRadius="@dimen/height_8"
    app:cardElevation="@dimen/height_8">


    <LinearLayout
        android:id="@+id/llayout_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:gravity="center">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_10"
            android:layout_weight="0.8">

            <TextView
                android:id="@+id/txt_delivery_boy_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorblack"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_delivery_boy_name"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="8 Orders"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorblack"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/height_20"
                android:layout_height="@dimen/height_20"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/height_10"
                android:background="@drawable/rightarrow_yellow" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>