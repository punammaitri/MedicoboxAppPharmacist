<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg"
    android:orientation="vertical"
    tools:context="com.aiprous.deliveryboy.instaorder.InstaProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLatestOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_8"
            android:layout_marginTop="@dimen/height_5"
            android:layout_marginRight="@dimen/height_8"
            android:fontFamily="@font/open_sans_regular"
            android:padding="@dimen/height_8"
            android:text="Sales"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/height_8"
                android:layout_marginRight="@dimen/height_8"
                android:layout_weight="0.45"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/height_4"
                    android:layout_marginBottom="@dimen/height_4"
                    app:cardCornerRadius="@dimen/height_8"
                    app:cardElevation="@dimen/height_10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/height_10">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/llHeader"
                            android:layout_marginBottom="@dimen/height_5" />

                        <LinearLayout
                            android:id="@+id/llHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginRight="@dimen/height_3"
                                android:layout_weight="1"
                                android:background="@drawable/custom_btn_bg_yellow"
                                android:text="yearly"
                                android:textColor="@android:color/white" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:background="@drawable/custom_btn_bg_yellow"
                                android:text="monthly"
                                android:textColor="@android:color/white" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginLeft="@dimen/height_3"
                                android:layout_weight="1"
                                android:background="@drawable/custom_btn_bg"
                                android:text="weekly"
                                android:textColor="@android:color/white" />
                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.55"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTodayOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_8"
                    android:layout_marginTop="@dimen/height_5"
                    android:layout_marginRight="@dimen/height_8"
                    android:fontFamily="@font/open_sans_regular"
                    android:padding="@dimen/height_8"
                    android:text="Today's Orders"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_8"
                    android:layout_marginTop="@dimen/height_4"
                    android:layout_marginRight="@dimen/height_8"
                    android:layout_marginBottom="@dimen/height_4"
                    app:cardCornerRadius="@dimen/height_8"
                    app:cardElevation="@dimen/height_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/relPendingOrder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img_pending_order"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/height_20"
                                android:layout_marginTop="@dimen/height_15"
                                android:background="@drawable/bottle" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/height_10"
                                android:layout_marginTop="@dimen/height_6"
                                android:layout_marginBottom="@dimen/height_8"
                                android:layout_toEndOf="@+id/img_pending_order"
                                android:layout_toRightOf="@+id/img_pending_order"
                                android:fontFamily="@font/open_sans_regular"
                                android:text="Pending Orders (20)"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/height_15"
                                android:layout_marginRight="@dimen/height_20"
                                android:background="@drawable/ic_arrow_right_yellow" />

                        </RelativeLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:background="@color/coloryellow" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img_processing_order"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/height_20"
                                android:layout_marginTop="@dimen/height_15"
                                android:background="@drawable/bottle" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/height_10"
                                android:layout_marginTop="@dimen/height_6"
                                android:layout_marginBottom="@dimen/height_8"
                                android:layout_toEndOf="@+id/img_processing_order"
                                android:layout_toRightOf="@+id/img_processing_order"
                                android:fontFamily="@font/open_sans_regular"
                                android:text="Processing Orders (20)"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/height_20"
                                android:layout_marginTop="@dimen/height_15"
                                android:layout_marginRight="@dimen/height_20"
                                android:background="@drawable/ic_arrow_right_yellow" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:background="@color/coloryellow" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img_completed_order"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="@dimen/height_20"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/bottle" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/height_10"
                                android:layout_marginTop="@dimen/height_6"
                                android:layout_marginBottom="@dimen/height_8"
                                android:layout_toEndOf="@+id/img_completed_order"
                                android:layout_toRightOf="@+id/img_completed_order"
                                android:fontFamily="@font/open_sans_regular"
                                android:text="Completed Orders (20)"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/height_20"
                                android:layout_marginTop="@dimen/height_15"
                                android:layout_marginRight="@dimen/height_20"
                                android:background="@drawable/ic_arrow_right_yellow" />

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/txtDeliveryBoyStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_8"
                    android:layout_marginTop="@dimen/height_5"
                    android:layout_marginRight="@dimen/height_8"
                    android:fontFamily="@font/open_sans_regular"
                    android:padding="@dimen/height_8"
                    android:text="Delivery Boy Status"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
                .
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>