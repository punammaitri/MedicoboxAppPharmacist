<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/height_3"
    android:layout_marginLeft="@dimen/height_5"
    android:layout_marginRight="@dimen/height_5"
    android:layout_marginBottom="@dimen/height_5"
    app:cardCornerRadius="@dimen/height_8"
    app:cardElevation="@dimen/height_8"
    android:background="@color/color_gray_bg">


    <LinearLayout
        android:id="@+id/llayout_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_medicine"
                android:layout_width="@dimen/height_50"
                android:layout_height="@dimen/height_70"
                android:src="@drawable/bottle"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_medicine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abc"
                android:fontFamily="@font/open_sans_regular"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:textColor="@color/colorblack"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:fontFamily="@font/open_sans_regular"
                android:layout_height="wrap_content"
                android:text="Rs200.00"
                android:textColor="@color/colorblack"
                />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:fontFamily="@font/open_sans_regular"
                android:layout_height="wrap_content"
                android:text="Type: Simple"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:fontFamily="@font/open_sans_regular"
                android:layout_height="wrap_content"
                android:text="Status: Enable"/>

            <TextView
                android:id="@+id/tv_status_confirmed"
                android:layout_width="match_parent"
                android:fontFamily="@font/open_sans_regular"
                android:layout_height="wrap_content"
                android:text="Qty. Confirmed : 0"/>
            <TextView
                android:id="@+id/tv_status_pending"
                android:layout_width="match_parent"
                android:fontFamily="@font/open_sans_regular"
                android:layout_height="wrap_content"
                android:text="Qty. Pending : 3"/>
            <TextView
                android:id="@+id/tv_qty"
                android:layout_width="match_parent"
                android:fontFamily="@font/open_sans_regular"
                android:layout_height="wrap_content"
                android:text="Qty. Sold : 3"/>

            <TextView
                android:id="@+id/tv_earned_amount"
                android:layout_width="match_parent"
                android:fontFamily="@font/open_sans_regular"
                android:layout_height="wrap_content"
                android:text="Earned Amount: Rs.0.00"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/height_25"
                android:layout_height="@dimen/height_25"
                android:src="@drawable/heart_active"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ADD"
                    android:fontFamily="@font/open_sans_regular"
                    android:textStyle="bold"
                    android:textColor="@color/colorblack"
                    android:gravity="top|center"
                    android:layout_marginTop="@dimen/height_10"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />
            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>